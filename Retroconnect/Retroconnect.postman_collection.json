{
  "info": {
    "name": "Retroconnect API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Retroconnect backend: health, mock auth, posts, discovery, and AI assistant."
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "Mock Auth",
      "item": [
        {
          "name": "GET /api/auth/users",
          "request": {
            "method": "GET",
            "header": [],
