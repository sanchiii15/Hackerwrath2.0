            "method": "POST",
            "header": [{"key":"Content-Type","value":"application/json"}],
            "body": {"mode":"raw","raw":"{\n  \"title\": \"Hello\",\n  \"content\": \"World\",\n  \"author\": \"000000000000000000000001\"\n}"},
            "url": { "raw": "{{baseUrl}}/api/posts", "host": ["{{baseUrl}}"], "path": ["api","posts"] }
          }
        },
        {
          "name": "GET /api/posts",
          "request": {
            "method": "GET",
            "header": [],
